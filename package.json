{
	"name": "blaze-timer",
	"appName": "Blaze Timer",
	"description": "A minimalist timer for Rubik's Cube",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"author": {
		"name": "Ivan Gemota",
		"email": "aivangogh.dev@gmail.com",
		"url": "https://aivan-dev.vercel.app"
	},
	"repository": "https://github.com/aivangogh/blaze-timer",
	"workspaces": ["./client", "./server"],
	"packageManager": "bun@1.2.4",
	"scripts": {
		"dev": "turbo dev",
		"dev:client": "cd client && bun run dev",
		"dev:server": "cd server && bun run dev",
		"clean": "rm -rf node_modules client/node_modules server/node_modules bun.lockb client/bun.lockb server/bun.lockb"
	},
	"devDependencies": {
		"bun-types": "latest",
		"turbo": "^2.4.4"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	}
}
